	journal = {Journal of Cosmology and Astro-Particle Physics},
	author = {Mainini, R. and Minelli, D. and Gervasi, M. and Boella, G. and Sironi, G. and Baú, A. and Banfi, S. and Passerini, A. and De Lucia, A. and Cavaliere, F.},
