	keywords = {cosmic background radiation, Cosmology: Observations, dark matter, early universe, instrumentation: detectors, space vehicles, space vehicles: instruments, telescopes},
	pages = {20},
	file = {NASA/ADS Full Text PDF:/Users/jlazear/Library/Application Support/Zotero/Profiles/thx0fg00.default/zotero/storage/87ZZPA2S/Bennett et al. - 2013 - Nine-year Wilkinson Microwave Anisotropy Probe (WM.pdf:application/pdf}
}

